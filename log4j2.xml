<?xml version="1.0" encoding="UTF-8"?>
<Configuration strict="true">
    <Appenders>
        <RollingFile name="RollingFile" fileName="clock.log" filePattern="clock-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy>
				<Delete basePath=".">
	                <IfFileName glob="*.log.gz">
	                    <IfAny>
	                        <IfAccumulatedFileCount exceeds="50" />
	                        <IfLastModified age="P1M" /> <!-- 1 month (see https://en.wikipedia.org/wiki/ISO_8601#Durations for syntax)  -->
	                        <IfAccumulatedFileSize exceeds="500MB" />
	                    </IfAny>
	                </IfFileName>
	            </Delete>            
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>


    <Loggers>
         <Logger name="marcclaessens.alarmclock" level="debug" additivity="false">
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Root level="warn">
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>